<div class="container">
  <div class="signup-container">
    <div class="signup-image2"></div>
    <div class="signup-form">
    <h2>ログイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :"メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレスを入力", class:"signup-input" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder:"パスワードを入力", class:"signup-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :"次回から入力しない" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class:"form-control" %>
      </div>
    <% end %>

    <div class="form-links"><%= render "devise/shared/links" %></div>
    </div>
  </div>
</div>
