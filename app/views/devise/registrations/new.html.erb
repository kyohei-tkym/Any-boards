<div class="container">
  <div class="signup-container">
    <div class="signup-image1"></div>
    <div class="signup-form">
      <h2>新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :"ユーザーネーム" %><br />
          <%= f.text_field :name, autofocus: true, placeholder:"ユーザーネームを入力", class:"signup-input" %>
        </div>

        <div class="field">
          <%= f.label :"性別" %><br />
          <%= f.select :gender, {'男性': "男性", '女性': "女性"}, {}, {class: "select-input"} %>
        </div>

        <div class="field">
          <%= f.label :"プロフィール画像" %></br>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class:"form-image" %>
        </div>

        <div class="field">
          <%= f.label :"身長・体重" %><br />
          <%= f.text_field :tall_weight, autofocus: true, placeholder:"○○○cm / ○○kg", class:"signup-input" %>
        </div>

        <div class="field">
          <%= f.label :"自己紹介" %><br />
          <%= f.text_area :introduction, autofocus: true, placeholder:"例）出身・ホームポイント・好きなサーファーetc..", class:"signup-introduction" %>
        </div>

        <div class="field">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレスを入力", class:"signup-input" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder:"半角英数６文字以上", class:"signup-input" %>
        </div>

        <div class="field">
          <%= f.label :"確認の為、もう一度入力" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"半角英数６文字以上", class:"signup-input" %>
        </div>

        <div class="actions">
          <%= f.submit "登録", class:"form-control" %>
        </div>
      <% end %>
      <div class="form-links"><%= render "devise/shared/links" %></div>
    </div>
  </div>
</div>