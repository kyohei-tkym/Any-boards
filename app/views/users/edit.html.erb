<div class="container">
  <div class="edit-profile-container">
    <div class="edit-profile-form">
      <h2 class="edit-profile-title">プロフィール編集</h2>
      <%= form_with model:@user, local:true do |f| %>
      <div class="edit-profile-detail">
        <%= f.label :"ユーザーネーム", class:"edit-label" %>
        <%= f.text_field :name, autofocus: true, class:"edit-input", placeholder:"名前"%>
      </div>
      <div class="edit-profile-detail">
        <%= f.label :"身長・体重", class:"edit-label" %>
        <%= f.text_field :tall_weight, autofocus: true, class:"edit-input", placeholder:"○○○cm/○○kg"%>
      </div>
      <div class="edit-profile-detail">
        <%= f.label :"プロフィール画像", class:"edit-label" %>
        <%= attachment_image_tag @user, :profile_image, :fill, 400, 400, fallback: "img/no_image.jpg", class:"edit-profile-image"%>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class:"edit-input" %>
      </div>
      <div class="edit-profile-detail">
        <%= f.label :"自己紹介", class:"edit-label" %>
        <%= f.text_area :introduction, autofocus: true, class:"edit-input-introduction" %>
      </div>
      <div class="edit-profile-detail">
        <%= f.submit "変更を保存", class:"edit-input" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
