<%= render 'post-form', post: @post %>

<div>
  <h3><%= @post.user.name %>'s　<%= @post.title %></h3>
  <% if @post.favorited_by?(current_user) %>
    <p>
      <%= link_to post_favorites_path(@post), method: :delete do %>
        NICE!(<%= @post.favorites.count %>)
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_favorites_path(@post), method: :post do %>
        NICE!(<%= @post.favorites.count %>)
      <% end %>
    </p>
  <% end %>
  <p>ユーザーネーム：<%= @post.user.name %></p>
  <p>ボードの名前：<%= @post.title %></p>
  <p>ボードの説明：<%= @post.body %></p>
  <p>ジャンル：<%= @post.genre %></p>
  <p>ブランド：
    <% @post.tags.each do |tag| %>
      <%= tag.tag_name %>
    <% end %>
  </p>
  <p>サイズ・浮力：<%= @post.size %></p>
  <p>身長・体重：<%= @post.user.tall_weight %></p>
  <% if @post.user == current_user %>
    <p><%= link_to "削除", post_path(@post), method: :delete %></p>
  <% end %>
</div>
<% @post.post_images.each do |post_image| %>
　<%= attachment_image_tag post_image, :image, size: "130x130" %>
<% end %>

<div class="comments">
<p>コメント件数：<%= @post.post_comments.count %></p>
<% @post.post_comments.each do |post_comment| %>
  <p><%= attachment_image_tag post_comment.user, :profile_image, :fill, 60, 60, fallback: "img/no_image.jpg"%></p>
  <%= post_comment.user.name %>
  <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
  <% if post_comment.user == current_user %>
  <div class="comment-delete">
    <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
  </div>
  <% end %>
<% end %>
</div>
<div class="new-comment">
<%= form_with(model:[@post, @post_comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>
