<% posts.each do |post| %>
  <div>
    <p>ボードの名前：<%= post.title %></p>
    <p>ユーザーネーム：<%= link_to post.user.name, user_path(post.user_id) %></p>
    <p>ジャンル：<%= post.genre %></p>
    <p>コメント件数：<%= post.post_comments.count %></p>
  </div>
  <div id="post-favorite_<%= post.id %>">
    <%= render 'posts/post-favorite', post: post %>
  </div>
  <%= link_to post_path(post.id) do %>
    <% post.post_images.first(1).each do |post_image| %>
  　　<%= attachment_image_tag post_image, :image, size: "130x130" %>
  　<% end %>
  <% end %>
<% end %>